<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.heo_mh.tutorial1.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/number1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="첫 번째 글자" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/number1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/number2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="두 번째 숫자" />

    <Button
        android:text="더하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/addButton"
        android:onClick="addClick"/>

    <Button
        android:text="빼기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addButton"
        android:layout_toRightOf="@+id/addButton"
        android:layout_toEndOf="@+id/addButton"
        android:id="@+id/substractButton"
        android:onClick="subtractClick"/>

    <Button
        android:text="곱하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number2"
        android:layout_toRightOf="@+id/substractButton"
        android:layout_toEndOf="@+id/substractButton"
        android:id="@+id/multiplyButton"
        android:onClick="multiplyClick"/>

    <Button
        android:text="나누기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number2"
        android:layout_toRightOf="@+id/multiplyButton"
        android:layout_toEndOf="@+id/multiplyButton"
        android:id="@+id/divideButton"
        android:onClick="divideClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/result"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
</RelativeLayout>
